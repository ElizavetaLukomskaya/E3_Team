<change_data_screen>:
    FloatLayout:
        MDTextField:
            id: change_data
            hint_text: "Helper text on focus"
            helper_text: "This will disappear when you click off"
            helper_text_mode: "on_focus"
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint_x: .5
        Button:
            id: change_button
            text: 'Change data'
            on_release: app.change_data()
            pos_hint: {"center_x": .4, "center_y": .4}
            size_hint_x: .1
            size_hint_y: .1
        Button:
            id: back_button
            text: 'back'
            on_release: app.change_screen('home_screen', direction='right', mode='push')
            pos_hint: {"center_x": .6, "center_y": .4}
            size_hint_x: .1
            size_hint_y: .1
