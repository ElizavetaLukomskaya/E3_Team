#:import utils kivy.utils

<WorkScreen>:
    FloatLayout:
        GridLayout:
            cols: 1
            id: datatable
            pos_hint: {"top": .895, "left": 1}
            size_hint: 1, .795
        GridLayout:
            rows: 1
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            LabelButton:
                text: '[u]Back[/u]'
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                markup: True
                on_release:
                    app.change_screen('home_screen', direction='left', mode='pop')
            LabelButton:
                text: '[u]Add data[/u]'
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {'top': .1, 'right': 1}
                markup: True
                on_release:
                    app.change_screen('add_data_screen', direction='right', mode='push')
            LabelButton:
                text: '[u]Remove data[/u]'
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {'top': .1, 'right': .666}
                markup: True
                on_release:
                    app.change_screen('remove_data_screen', direction='up', mode='push')
            LabelButton:
                text: '[u]Search data[/u]'
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": 1}
                markup: True
                on_release:
                    app.change_screen('search_data_screen', direction='down', mode='push')
            LabelButton:
                text: '[u]Change data[/u]'
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": .666}
                markup: True
                on_release:
                    app.change_screen('change_data_screen', direction='left', mode='push')