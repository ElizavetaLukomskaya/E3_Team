<error_screen>:
    FloatLayout:
        MDLabel:
            halign: 'center'
            text: 'Error'
            font_style: 'H1'
            theme_text_color: 'Error'

        MDLabel:
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            text: 'Function will be able soon'
            font_style: 'H5'
        Button:
            text: 'Back'
            pos_hint: {"center_x": .9, "center_y": .1}
            size_hint_x: .1
            size_hint_y: .1
            on_release: app.change_screen('home_screen', direction='right', mode='push')
